                            <section id="cd-timeline" class="cd-container">
                                <script>
                                    let d = new Date();
                                    let ano = d.getFullYear();
                                    let mes = ((d.getMonth() + 1) < 10) ? '0'+(d.getMonth() + 1) : (d.getMonth() + 1);
                                    let dia = d.getDate();
                                    let fecha = ano+'-'+mes+'-'+dia;
                                    //alert('La fecha actual es: ' + fecha);
                                    $.ajax({
                                        url: '/buscarPorFecha/' + fecha,
                                        type: 'GET',
                                        dataType: 'json',
                                        success: function (data, textStatus, jqXHR) {
                                            console.log(data);

                                            for (var i = 0; i < data.length; i++) {
                                                let fecha = data[i].fechaVisita;
                                                let persona = data[i].pago.ventum.cliente.persona;
                                                let html  = '<div class="cd-timeline-block">';
                                                    html += '   <div class="cd-timeline-img">';
                                                    html += '       <img src="./assets/img/avatar.jpg" alt="user-picture">';
                                                    html += '   </div>';
                                                    html += '   <div class="cd-timeline-content">';
                                                    html += '       <h4 class="text-center text-titles">'+persona.nombre+'</h4>';
                                                    html += '       <h4 class="text-center text-titles">'+persona.apellido+'</h4>';
                                                    html += '       <h4 class="text-center text-titles">'+persona.geolocalizacions[i].ciudad+'</h4>';
                                                    html += '       <span class="cd-date"><i class="zmdi zmdi-calendar-note zmdi-hc-fw"></i>'+fecha+'</span>';
                                                    html += '   </div>';
                                                    html += '</div>';

                                                $('#cd-timeline').append(html);
                                            }
                                        }, error: function (jqXHR, textStatus, errorThrown) {
                                            cosole.log(errorThrown);
                                        }
                                    });
                                </script> 
                            </section>


